;;;
;;; Setup mode for Qt programming.
;;;
;;; If needed, this installs qt-pro-mode and qml-mode.  It then adds
;;; entries to the auto-mode-alist for .pro, .pri, and .qml files
;;; 

(let* ((f (lambda () (progn
                       (require 'qt-pro-mode)
                       (add-to-list 'auto-mode-alist '("\\.pr[io]$" . qt-pro-mode))))))
  (condition-case nil (funcall f)
    (error (progn (condition-case nil
                      (progn (package-install 'qt-pro-mode) (funcall f))
                    (error      (message "Could not load qt-pro-mode")))))))
 
(let* ((f (lambda () (progn
                       (require 'qml-mode)
                       (autoload 'qml-mode "qml-mode" "Editing Qt Declarative." t)
                       (add-to-list 'auto-mode-alist '("\\.qml$" . qml-mode))))))
  (condition-case nil (funcall f)
    (error (progn (condition-case nil
                      (progn (package-install 'qml-mode) (funcall f))
                    (error      (message "Could not load qml-mode")))))))
  
    
